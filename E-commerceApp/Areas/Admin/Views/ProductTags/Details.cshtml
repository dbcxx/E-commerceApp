@model E_commerceApp.Models.ProductTags;

@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Details of Product Tag</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTag"></label>
            </div>
              <div class="col-5">
            <input asp-for="ProductTag" class="form-control"  readonly="readonly"/>
        </div>
        <span asp-validation-for="ProductTag" class="text-danger"></span>
        </div>
      
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit </a>
        <input type="submit" class="btn btn-success" value="Back to List" />
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}