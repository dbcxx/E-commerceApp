@model E_commerceApp.Models.ProductTags;

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Edit Product Tag</h2>
<form asp-action="Edit" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTag"></label>
            </div>
              <div class="col-5">
            <input asp-for="ProductTag" class="form-control" />
        </div>
        <span asp-validation-for="ProductTag" class="text-danger"></span>
        </div>
      
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back to list </a>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}